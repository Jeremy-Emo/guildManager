{% extends 'layout.html.twig' %}

{% block page_title %}Défenses GVO{% endblock %}

{% block moreCSS %}
    {{ parent() }}
    {{ encore_entry_link_tags('defense') }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 ma-25-top">
                <div class="pa-20 bg-white">
                    <h2>Mes défenses :</h2>
                    <p class="ma-25-top border-bottom pa-10-bottom"><a href="{{ path('gvo_def_new') }}">Ajouter une défense</a></p>
                    {% for defense in myDefenses %}
                        <div class="row align-items-center">
                            <div class="col-3"><img class="border-leader" src="{{ defense.mobLeader.image }}"></div>
                            <div class="col-3"><img src="{{ defense.mobOne.image }}"></div>
                            <div class="col-3"><img src="{{ defense.mobTwo.image }}"></div>
                            <div class="col-3"><p><a href="{{ path('gvo_def_delete', {'id':defense.id}) }}">Supprimer</a></p></div>
                        </div>
                        <div class="row border-bottom pa-10 align-items-center">
                            <div class="col-6 pa-10">
                                <p class="row">Victoires : <input type="number" min="0" data-id="{{ defense.id }}" class="victory" value="{{ defense.victories }}"></p>
                            </div>
                            <div class="col-6 pa-10">
                                <p class="row">Défaites : <input type="number" min="0" data-id="{{ defense.id }}" class="loses" value="{{ defense.loses }}"></p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="col-md-6 ma-25-top">
                <div class="pa-20 bg-white">
                    <h2>Rechercher les défenses avec ce mob :</h2>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block moreJS %}
    {{ parent() }}
    {{ encore_entry_script_tags('defense') }}
{% endblock %}
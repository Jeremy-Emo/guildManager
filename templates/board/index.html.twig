{% extends 'layout.html.twig' %}

{% block page_title %}Tableau de bord{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 ma-25-top">
                <div class="pa-20 bg-white">
                {% if memberInfos %}
                    {{ form_start(formGuild) }}
                    <div class="column">
                        <p>{{ form_widget(formGuild.isInGvG) }}</p>
                        <p>{{ form_widget(formGuild.isInGvO) }}</p>
                        <p><input type="submit" value="Modifier"></p>
                    </div>
                    {{ form_end(formGuild) }}
                {% else %}
                    <p>Vous ne faites pas partie d'une guilde de l'alliance.</p>
                {% endif %}
                </div>
            </div>

            <div class="col-md-6 ma-25-top">
                <div class="pa-20 bg-white">
                {% if guildInfos %}
                    <p><span class="bold">Nom de la guilde</span> : {{ guildInfos.name }}</p>
                    {% if guildInfos.message %}
                        <p class="bold">Message de guilde :</p>
                        <p>{{ guildInfos.message }}</p>
                    {% endif %}
                    {% if guildInfos.websiteLink %}
                        <p><a href="{{ guildInfos.websiteLink }}">{{ guildInfos.websiteLink }}</a></p>
                    {% endif %}
                    {% if guildInfos.discordLink %}
                        <p><a href="{{ guildInfos.websiteLink }}">Discord</a></p>
                    {% endif %}
                {% endif %}
                </div>
            </div>
        </div>

        <div class="row">

        </div>
    </div>
{% endblock %}
{% extends 'layout.html.twig' %}

{% block page_title %}Offenses GVO{% endblock %}

{% block moreCSS %}
    {{ parent() }}
    {{ encore_entry_link_tags('defense') }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12 ma-25-top">
                <div class="pa-20 bg-white">
                    <h2>Défenses courantes :</h2>
                    {% if app.user.isAdmin %}
                        <p class="t-align-right inline"><a href="{{ path('gvo_def_example_add') }}">Ajouter une défense courante</a></p>
                    {% endif %}
                    <div class="row">
                    {% for defense in defs %}
                        <div class="col-md-4 pa-20">
                            <a href="{{ path('gvo_off_new', {'id' : defense.id}) }}" class="row align-items-center classic_defense pa-5">
                                <div class="col-4">
                                    <div class="monster_lead">
                                        <img class="border-leader full-width" src="{{ defense.mobLeader.image }}">
                                        <img class="leader_box" src="{{ asset('build/assets/img/leader_skill.png') }}">
                                    </div>
                                </div>
                                <div class="col-4"><img class="full-width" src="{{ defense.mobOne.image }}"></div>
                                <div class="col-4"><img class="full-width" src="{{ defense.mobTwo.image }}"></div>
                            </a>
                        </div>
                    {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-12 t-align-center">
                            <a href="https://swgt.io/3mdc/" target="_blank">Une défense manque ? N'hésitez pas à consulter ce site !</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block moreJS %}
    {{ parent() }}
{% endblock %}